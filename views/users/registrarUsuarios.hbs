            <div class="row">
                <form action="/Usuario" method="POST" class="col s12">
                    <div class="row">
                        <div class="input-field col s12">
                            <input placeholder="username" id="email" name="mail" type="email" class="validate" />
                            <label for="email">Email</label>
                        </div>
