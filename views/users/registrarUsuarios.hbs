    <h1>Registrar Usuario</h1>
    <div class="flash-message" id="flashMessage">REGISTRA USUARIO.</div>
    <form action="/usuarios" method="POST">
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" name="nombre" required>

        <label for="codigoEstudiante">Código de Estudiante:</label>
        <input type="text" id="codigoEstudiante" name="codigoEstudiante" required>

        <label for="grado">Grado:</label>
        <input type="text" id="grado" name="grado" required>

        <label for="seccion">Sección:</label>
        <input type="text" id="seccion" name="seccion" required>

        <button type="submit">Registrar Usuario</button>
    </form>
    <div>
        <button onclick="window.location.href='http://127.0.0.1:3000/'">REGRESAR</button>
    </div>

    <script>
        // Mostrar el mensaje flash durante 3 segundos al cargar la página
        document.addEventListener("DOMContentLoaded", function() {
            var flashMessage = document.getElementById("flashMessage");
            flashMessage.style.display = "block";
            setTimeout(function() {
                flashMessage.style.display = "none";
            }, 3000); // Ocultar el mensaje después de 3 segundos (3000 milisegundos)
        });
    </script>
</body>

</html>
